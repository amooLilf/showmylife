.intro{
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 13px;
  color: #8d8a8a;
}

.post-type-container {
    align-items: center;
    justify-content: center; 
    background-color: #ffffff;
    border-radius: 15rpx;
    margin: 20rpx;
    padding-left: 8rpx;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
}
.post-type-wrap {
  display: inline-block;
  margin-left: 10px;
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 12px;
  padding: 5px 10px;
  border-width: 1px;
  border-style: solid;
  border-radius: 2px;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
  border-top-right-radius: 2px;
  border-top-left-radius: 2px;
}

.title_input {
    font-size: 30rpx;
    width:590rpx;
}

